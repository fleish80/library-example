{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      //      "lib-main": [
      //        "dist/lib-main/lib-main",
      //        "dist/lib-main"
      //      ],
      //      "lib-child": [
      //        "dist/lib-child/lib-child",
      //        "dist/lib-child"
      //      ],

      "@demanor/lib-main/*": [
        "projects/lib-main/*",
        "projects/lib-main"
      ],
      "@demanor/lib-main": [
        "dist/lib-main/*",
        "dist/lib-main"
      ],
      "@demanor/lib-child/*": [
        "projects/lib-child/*",
        "projects/lib-child"
      ],
      "@demanor/lib-child": [
        "dist/lib-child/*",
        "dist/lib-child"
      ]
    }
  }
}
